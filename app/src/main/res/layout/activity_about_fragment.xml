<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_my_about_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_app_about_logo"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/ic_launcher" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_my_about_image"
        android:orientation="vertical">

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/center_line_color" />

        <LinearLayout
            android:id="@+id/ll_app_about_check_update"
            style="@style/my_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                style="@style/my_about_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="版本信息: " />

            <TextView
                android:id="@+id/tv_app_about_version"
                style="@style/my_about_item_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_have_update"
                android:layout_width="@dimen/dp_43"
                android:layout_height="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_8"
                android:background="@drawable/setting_remind_tv_red_bg"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="更新"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/rb_ic_arrow_right" />

        </LinearLayout>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/center_line_color" />

        <LinearLayout
            android:id="@+id/ll_app_ads_group"
            style="@style/my_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                style="@style/my_about_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告合作: " />

            <TextView
                android:id="@+id/ll_app_ads_id"
                style="@style/my_about_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx.ddd@gmail.com" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/rb_ic_arrow_right" />
        </LinearLayout>
        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/center_line_color" />

        <LinearLayout
            android:id="@+id/ll_app_qq_group"
            style="@style/my_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:orientation="horizontal">

            <TextView
                style="@style/my_about_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系我们: " />

            <TextView
                android:id="@+id/tv_qq_group_id"
                style="@style/my_about_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx.ddd@gmail.com" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/rb_ic_arrow_right" />
        </LinearLayout>

        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/center_line_color" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《隐私协议》"
            android:textColor="#FF4081"
            android:textSize="11sp" />


        <TextView
            android:id="@+id/tv_user_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《用户协议》"
            android:textColor="#FF4081"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_user_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="《版权声明》"
            android:textColor="#FF4081"
            android:textSize="11sp" />

    </LinearLayout>

</RelativeLayout>