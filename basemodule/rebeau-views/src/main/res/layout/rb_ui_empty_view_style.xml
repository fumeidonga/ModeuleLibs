<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_empty_data_style_image"
            android:layout_width="278dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/rb_empty_remind_ic_no_data" />

        <TextView
            android:id="@+id/tv_empty_data_style_first_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="暂无数据"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_empty_data_style_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据提示"
            android:textColor="#999999"
            android:textSize="14sp" />

        <com.rebeau.views.loading.RBMainButton
            android:id="@+id/bt_empty_data_style_default"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/rb_ui_dp_20"
            android:paddingRight="@dimen/rb_ui_dp_20"
            android:layout_height="@dimen/rb_ui_dp_25"
            android:layout_marginTop="@dimen/rb_ui_dp_14"
            android:gravity="center"
            android:textSize="@dimen/rb_ui_text_size_14" />
    </LinearLayout>
</RelativeLayout>
